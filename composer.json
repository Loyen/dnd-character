{
    "name": "loyen/dndb-character-sheet",
    "type": "project",
    "autoload": {
        "psr-4": {
            "loyen\\DndbCharacterSheet\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Patrik Freij",
            "email": "patrik.t.freij@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7",
        "composer/composer": "^2",
        "twig/twig": "^3"
    },
    "scripts": {
        "review": [
            "@lint",
            "@analyse",
            "@test"
        ],
        "lint": "phpcs",
        "format": "phpcbf",
        "analyse": "phpstan analyze",
        "test": "phpunit",
        "from-api": "loyen\\DndbCharacterSheet\\Command\\CharacterSheet::fromAPI",
        "from-file": "loyen\\DndbCharacterSheet\\Command\\CharacterSheet::fromFile"
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\loyen\\DndbCharacterSheet\\": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3"
    }
}
