{
    "name": "loyen/dndb-character-sheet",
    "type": "project",
    "authors": [
        {
            "name": "Patrik Freij",
            "email": "patrik.t.freij@gmail.com"
        }
    ],
    "scripts": {
        "review": [
            "@lint",
            "@analyse",
            "@test"
        ],
        "lint": "php-cs-fixer fix --dry-run",
        "format": "php-cs-fixer fix",
        "analyse": "phpstan analyze",
        "test": "phpunit"
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "autoload": {
        "psr-4": {
            "DndSheet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DndSheet\\Tests\\": "tests/"
        }
    },
    "require": {
        "guzzlehttp/guzzle": "7.*",
        "twig/twig": "3.*",
        "symfony/console": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "1.*",
        "phpunit/phpunit": "11.*",
        "friendsofphp/php-cs-fixer": "3.*",
        "phpstan/phpstan-phpunit": "^1.3"
    }
}
