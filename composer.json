{
    "name": "loyen/dndb-character-sheet",
    "type": "project",
    "autoload": {
        "psr-4": {
            "loyen\\DndbCharacterSheet\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Patrik Freij",
            "email": "patrik.t.freij@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.0",
        "composer/composer": "^2.3",
        "twig/twig": "^3.0"
    },
    "scripts": {
        "validate": [
            "@lint",
            "@analyse",
            "@test"
        ],
        "lint": "phpcs",
        "format": "phpcbf",
        "analyse": "phpstan analyze src",
        "test": "phpunit",
        "from-api": "loyen\\DndbCharacterSheet\\Command\\CharacterSheet::fromAPI",
        "from-file": "loyen\\DndbCharacterSheet\\Command\\CharacterSheet::fromFile"
    },
    "config": {
        "platform": {
            "php": "8.1"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\loyen\\DndbCharacterSheet\\": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    }
}
