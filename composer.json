{
    "name": "loyen/dndb-character-sheet",
    "type": "project",
    "authors": [
        {
            "name": "Patrik Freij",
            "email": "patrik.t.freij@gmail.com"
        }
    ],
    "scripts": {
        "review": [
            "@lint",
            "@analyse",
            "@test"
        ],
        "lint": "php-cs-fixer fix --dry-run",
        "format": "php-cs-fixer fix",
        "analyse": "phpstan analyze",
        "test": "phpunit",
        "dndb-api": "loyen\\DndbCharacterSheet\\Command\\DndBeyondApi::fromApi",
        "dndb-json": "loyen\\DndbCharacterSheet\\Command\\DndBeyondApi::fromFile",
        "custom-yaml": "loyen\\DndbCharacterSheet\\Command\\CustomYaml::fromFile"
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "autoload": {
        "psr-4": {
            "loyen\\DndbCharacterSheet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\loyen\\DndbCharacterSheet\\": "tests/"
        }
    },
    "require": {
        "guzzlehttp/guzzle": "7.*",
        "composer/composer": "2.*",
        "twig/twig": "3.*"
    },
    "require-dev": {
        "phpstan/phpstan": "1.*",
        "phpunit/phpunit": "10.*",
        "friendsofphp/php-cs-fixer": "3.*",
        "phpstan/phpstan-phpunit": "1.*"
    }
}
